extends layout

block content
  h1= title
  ul
    if user 
      p #{user.slug}
    li: a(href="users/logout") Log Out
    li: a(href="users/profile") Profile #{user.slug}
    li: a(href="/f/") Forums
  p Welcome to #{title}
  p  #{views}
  div
  ul
    each x in result
      li
        a(href='/f/' + x.slug) 
          h1= x.title
        h3= x.category
          p= x.description

